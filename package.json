{
  "name": "@dojo/shim",
  "version": "0.2.4-pre",
  "description": "Modules that provide modular fills of ES6+ functionality",
  "homepage": "https://dojo.io",
  "bugs": {
    "url": "https://github.com/dojo/shim/issues"
  },
  "license": "BSD-3-Clause",
  "main": "main.js",
  "private": true,
  "engines": {
    "npm": ">=3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dojo/shim.git"
  },
  "scripts": {
    "prepublish": "dojo-install-peer-deps",
    "lint": "tslint -p .",
    "test": "npm run build:umd && intern",
    "test:local": "intern config=intern.json@local",
    "test:browserstack": "intern config=intern.json@browserstack",
    "test:saucelabs": "intern config=intern.json@saucelabs",
    "build:static": "copyfiles \"tests/**/*.html\" \"src/**/*.d.ts\"",
    "build:umd": "tsc -p . && npm run build:static -- dist/umd",
    "build:esm": "tsc -p ./node_modules/@dojo/scripts/tsconfig/tsconfig.esm.json && npm run build:static -- dist/esm",
    "clean": "rimraf dist",
    "dist": "npm run lint && npm run clean && npm run build:umd && npm run build:esm && npm run package",
    "package": "dojo-package",
    "release": "dojo-can-publish-check && dojo-repo-is-clean-check && npm run dist && npm run package && dojo-release"
  },
  "peerDependencies": {
    "@dojo/has": "~0.1.1"
  },
  "devDependencies": {
    "@dojo/loader": "~0.1.1",
    "@types/glob": "~5.0.0",
    "@types/grunt": "~0.4.0",
    "@types/node": "~6.0.49",
    "copyfiles": "^1.2.0",
    "intern": "~4.1.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.8.0",
    "typescript": "~2.6.1"
  },
  "dependencies": {
    "intersection-observer": "^0.4.2",
    "pepjs": "^0.4.2",
    "tslib": "^1.7.1"
  }
}
